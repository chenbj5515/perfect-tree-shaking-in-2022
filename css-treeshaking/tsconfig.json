{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationDir": "dist/types/",
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
        }
    },
    "include": ["src"]
}